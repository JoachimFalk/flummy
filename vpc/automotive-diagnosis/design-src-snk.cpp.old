#include <cstdlib>
#include <iostream>

#include <systemoc/smoc_moc.hpp>
#include <systemoc/smoc_port.hpp>
#include <systemoc/smoc_fifo.hpp>
#include <systemoc/smoc_node_types.hpp>

template <typename T>
class m_h_src: public smoc_actor {
public:
  smoc_port_out<T> out;
private:
  T       i;
  size_t  iter;
  
  void src() {
    std::cout
      << name() << ": generate token with id "
      << out.tokenId(0) << " with value " << i.value << std::endl;
    i.presentationTime = sc_time_stamp() + sc_time(10, SC_MS);
    out[0] = i; --iter; i.value++;
  }
  smoc_firing_state start;
public:
  m_h_src(sc_module_name name, size_t _iter)
    : smoc_actor(name, start),
      i(1), iter(_iter) {
    start =
         (out(1) && VAR(iter) > 0U)
      >> CALL(m_h_src::src)       >> start;
  }
};


template <typename T>
class m_h_sink: public smoc_actor {
public:
  smoc_port_in<T> in;
private:
  int i;
  smoc::smoc_event presTimeGone;
  sc_event presTimeGone_SC;

  void notifier() {
     smoc::smoc_notify(presTimeGone);
   }
  SC_HAS_PROCESS(m_h_sink);

  
  void sink(void) {
    std::cout
      << name() << ": received token with id "
      << in.tokenId(0) << " and value " << in[0].value << std::endl;
    smoc::smoc_reset(presTimeGone);
  }
  
  void pres(void) {
    std::cout
      << name() << " notify receiver for token with id "
      << in.tokenId(0) << " and value " << in[0].value << " @ " << in[0].presentationTime << " fifo-Usage: " << in.numAvailable() << std::endl;
    if(sc_time_stamp() < in[0].presentationTime){
        presTimeGone_SC.notify(in[0].presentationTime - sc_time_stamp());
    }else{
        presTimeGone_SC.notify();
    }
  }

  smoc_firing_state start;
  smoc_firing_state presTime;
public:
  m_h_sink(sc_module_name name)
    : smoc_actor(name, presTime) {
    SC_METHOD(notifier);
        sensitive << presTimeGone_SC;

    presTime = in(0,1) >> CALL(m_h_sink::pres) >> start;
    start = (in(1) && smoc::Expr::till(presTimeGone)) >> CALL(m_h_sink::sink) >> presTime;
  }
};

template <typename T>
class presTime{
public:
  T value;
  sc_time presentationTime;

  presTime(T i){
    value = i;
  }

  friend ostream& operator << (ostream &os,const presTime &obj){
    os << obj.value << " @ " << obj.presentationTime;
          return os;
  }
};


class m_h_top: public smoc_graph {
protected:
  m_h_src<presTime<int> >     src;
  m_h_sink<presTime<int> >    snk;
public:
  m_h_top(sc_module_name name, size_t iter)
    : smoc_graph(name),
      src("src", iter), snk("snk") {

    smoc_fifo<presTime<int> > q("queue", 10);
    q.connect(src.out).connect(snk.in);
  }
};

int sc_main (int argc, char **argv) {
  size_t iter = static_cast<size_t>(-1);
  
  if (argc >= 2)
    iter = atol(argv[1]);
  
  smoc_top_moc<m_h_top> top("top", iter);
  sc_start();
  return 0;
}
